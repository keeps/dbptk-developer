<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread] %-5level \(%logger{0}\) %msg%n%exception{full}</pattern>
        </encoder>
    </appender>

    <root>
        <level value="WARN"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
