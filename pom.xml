<?xml version="1.0"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <name>Database Preservation Toolkit</name>
    <groupId>pt.keep</groupId>
    <artifactId>db-preservation-toolkit</artifactId>
    <version>2.0.1</version>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <projectLocalRepository>${project.basedir}/vendor-libs/repository</projectLocalRepository>
        <source.dir>${basedir}/src/main/java</source.dir>
        <java_version>1.6</java_version>
        <maven.compiler.plugin.version>3.3</maven.compiler.plugin.version>
        <maven.jar.plugin.version>2.6</maven.jar.plugin.version>
        <maven.jaxb2.plugin.version>0.12.3</maven.jaxb2.plugin.version>
        <maven.install.plugin.version>2.5.2</maven.install.plugin.version>
        <siard1.version>1.0.1</siard1.version>
        <siard2.version>1.0.1</siard2.version>
    </properties>
    <build>
        <sourceDirectory>${source.dir}</sourceDirectory>
    </build>
    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>2.4</version>
                        <configuration>
                            <source>${java_version}</source>
                            <target>${java_version}</target>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>2.4</version>
                        <configuration>
                            <archive>
                                <manifest>
                                    <mainClass>com.databasepreservation.Main</mainClass>
                                </manifest>
                            </archive>
                            <descriptorRefs>
                                <descriptorRef>jar-with-dependencies</descriptorRef>
                            </descriptorRefs>
                        </configuration>
                        <executions>
                            <execution>
                                <id>make-assembly</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-enforcer-plugin</artifactId>
                        <version>1.4</version>
                        <dependencies>
                            <dependency>
                                <groupId>com.redhat.victims</groupId>
                                <artifactId>enforce-victims-rule</artifactId>
                                <version>1.3.4</version>
                                <type>jar</type>
                            </dependency>
                        </dependencies>
                        <executions>
                            <execution>
                                <id>enforce-victims-rule</id>
                                <goals>
                                    <goal>enforce</goal>
                                </goals>
                                <configuration>
                                    <rules>
                                        <rule implementation="com.redhat.victims.VictimsRule">
                                            <metadata>warning</metadata>
                                            <fingerprint>warning</fingerprint>
                                            <updates>daily</updates>
                                        </rule>
                                    </rules>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>2.18.1</version>
                        <configuration>
                            <suiteXmlFiles>
                                <suiteXmlFile>${basedir}/testng.xml</suiteXmlFile>
                            </suiteXmlFiles>
                            <groups>${testng.groups}</groups>
                        </configuration>
                        <executions>
                            <execution>
                                <id>surefire-test</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>generate-siard1</id>
            <properties>
                <maven.test.skip>true</maven.test.skip>
                <source.dir>${project.build.directory}/generated-sources/xjc/siard1</source.dir>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>${basedir}</directory>
                        <excludes>
                            <exclude>**</exclude>
                        </excludes>
                    </resource>
                    <resource>
                        <directory>${basedir}/src/main/resources/</directory>
                        <includes>
                            <include>**/siard1-metadata.xsd</include>
                            <include>**/jodatime.xjb</include>
                        </includes>
                    </resource>
                </resources>
                <plugins>
                    <plugin>
                        <groupId>org.jvnet.jaxb2.maven2</groupId>
                        <artifactId>maven-jaxb2-plugin</artifactId>
                        <version>${maven.jaxb2.plugin.version}</version>
                        <executions>
                            <execution>
                                <id>generate-jaxb-siard1</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <strict>false</strict>

                            <!-- specify the schema to convert -->
                            <schemaDirectory>${basedir}/src/main/resources/schema</schemaDirectory>
                            <schemaIncludes>
                                <include>siard1-metadata.xsd</include>
                            </schemaIncludes>

                            <!-- specifically specify each binding to use in conversion -->
                            <bindingDirectory>${basedir}/src/main/resources/config/jaxb</bindingDirectory>
                            <bindingIncludes>
                                <include>jodatime.xjb</include>
                            </bindingIncludes>
                            <!--generate java classes-->
                            <generateDirectory>${project.build.directory}/generated-sources/xjc/siard1
                            </generateDirectory>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>${maven.compiler.plugin.version}</version>
                        <configuration>
                            <source>${java_version}</source>
                            <target>${java_version}</target>
                        </configuration>
                        <executions>
                            <execution>
                                <id>default-compile</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>compile</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <version>${maven.jar.plugin.version}</version>
                        <executions>
                            <execution>
                                <id>default-jar-siard1</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <finalName>siard1-jaxb</finalName>
                                </configuration>
                            </execution>
                            <execution>
                                <id>default-jar</id>
                                <phase>none</phase>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-install-plugin</artifactId>
                        <version>${maven.install.plugin.version}</version>
                        <executions>
                            <execution>
                                <id>default-install-project-repository-siard1</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <file>${project.build.directory}/siard1-jaxb.jar</file>
                                    <groupId>ch.admin.bar</groupId>
                                    <artifactId>siard1-jaxb</artifactId>
                                    <version>${siard1.version}</version>
                                    <localRepositoryPath>${projectLocalRepository}</localRepositoryPath>
                                    <packaging>jar</packaging>
                                </configuration>
                            </execution>
                            <execution>
                                <id>default-install-machine-repository-siard1</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <file>${project.build.directory}/siard1-jaxb.jar</file>
                                    <groupId>ch.admin.bar</groupId>
                                    <artifactId>siard1-jaxb</artifactId>
                                    <version>${siard1.version}</version>
                                    <localRepositoryPath>${localRepositoryPath}</localRepositoryPath>
                                    <packaging>jar</packaging>
                                </configuration>
                            </execution>
                            <execution>
                                <id>default-install</id>
                                <phase>none</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>generate-siard2</id>
            <properties>
                <maven.test.skip>true</maven.test.skip>
                <source.dir>${project.build.directory}/generated-sources/xjc/siard2</source.dir>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>${basedir}</directory>
                        <excludes>
                            <exclude>**</exclude>
                        </excludes>
                    </resource>
                    <resource>
                        <directory>${basedir}/src/main/resources/</directory>
                        <includes>
                            <include>**/siard2-metadata.xsd</include>
                            <include>**/jodatime.xjb</include>
                        </includes>
                    </resource>
                </resources>
                <plugins>
                    <plugin>
                        <groupId>org.jvnet.jaxb2.maven2</groupId>
                        <artifactId>maven-jaxb2-plugin</artifactId>
                        <version>${maven.jaxb2.plugin.version}</version>
                        <executions>
                            <execution>
                                <id>generate-jaxb-siard2</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <strict>false</strict>

                            <!-- specify the schema to convert -->
                            <schemaDirectory>${basedir}/src/main/resources/schema</schemaDirectory>
                            <schemaIncludes>
                                <include>siard2-metadata.xsd</include>
                            </schemaIncludes>

                            <!-- specifically specify each binding to use in conversion -->
                            <bindingDirectory>${basedir}/src/main/resources/config/jaxb</bindingDirectory>
                            <bindingIncludes>
                                <include>jodatime.xjb</include>
                            </bindingIncludes>
                            <!-- generate java classes -->
                            <generateDirectory>${project.build.directory}/generated-sources/xjc/siard2
                            </generateDirectory>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>${maven.compiler.plugin.version}</version>
                        <configuration>
                            <source>${java_version}</source>
                            <target>${java_version}</target>
                        </configuration>
                        <executions>
                            <execution>
                                <id>default-compile</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>compile</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <version>${maven.jar.plugin.version}</version>
                        <executions>
                            <execution>
                                <id>default-jar-siard2</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <finalName>siard2-jaxb</finalName>
                                </configuration>
                            </execution>
                            <execution>
                                <id>default-jar</id>
                                <phase>none</phase>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-install-plugin</artifactId>
                        <version>${maven.install.plugin.version}</version>
                        <executions>
                            <execution>
                                <id>default-install-project-repository-siard2</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <file>${project.build.directory}/siard2-jaxb.jar</file>
                                    <groupId>ch.admin.bar</groupId>
                                    <artifactId>siard2-jaxb</artifactId>
                                    <version>${siard2.version}</version>
                                    <localRepositoryPath>${projectLocalRepository}</localRepositoryPath>
                                    <packaging>jar</packaging>
                                </configuration>
                            </execution>
                            <execution>
                                <id>default-install-machine-repository-siard2</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <file>${project.build.directory}/siard2-jaxb.jar</file>
                                    <groupId>ch.admin.bar</groupId>
                                    <artifactId>siard2-jaxb</artifactId>
                                    <version>${siard2.version}</version>
                                    <localRepositoryPath>${localRepositoryPath}</localRepositoryPath>
                                    <packaging>jar</packaging>
                                </configuration>
                            </execution>
                            <execution>
                                <id>default-install</id>
                                <phase>none</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    <description>A toolkit that allows data migration and conversion between database management systems formats and
        digital preservation formats, such as DBML.
    </description>
    <scm>
        <url>https://github.com/keeps/db-preservation-toolkit</url>
    </scm>
    <organization>
        <name>KEEP SOLUTIONS</name>
        <url>http://www.keep.pt</url>
    </organization>
    <repositories>
        <repository>
            <id>KEEPS-Artifacts</id>
            <name>KEEP Artifacts-releases</name>
            <url>http://artifactory.keep.pt/keep</url>
        </repository>
        <repository>
            <id>vendorDependencies</id>
            <name>Vendor dependencies</name>
            <releases>
                <enabled>true</enabled>
                <checksumPolicy>ignore</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <url>file://${project.basedir}/vendor-libs/repository/</url>
        </repository>
    </repositories>
    <dependencies>
        <dependency>
            <groupId>ch.admin.bar</groupId>
            <artifactId>siard1-jaxb</artifactId>
            <version>${siard1.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.admin.bar</groupId>
            <artifactId>siard2-jaxb</artifactId>
            <version>${siard2.version}</version>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-integration</artifactId>
            <version>1.3</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <version>1.9</version>
        </dependency>
        <dependency>
            <groupId>org.w3c</groupId>
            <artifactId>w3c-utils</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>pt.keep</groupId>
            <artifactId>file-format-utility</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>com.microsoft.sqlserver.jdbc</groupId>
            <artifactId>sqljdbc4</artifactId>
            <version>4.0</version>
        </dependency>
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>5.1.34</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>pt.gov.dgarq.roda</groupId>
            <artifactId>mets-1.7</artifactId>
            <version>1.0.0</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-compress</artifactId>
            <version>1.7</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
